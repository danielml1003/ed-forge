{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ed-forge",
  "version": "0.1.0",
  "identifier": "com.edforge.desktop",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "title": "ed-forge",
        "label": "main",
        "width": 1100,
        "height": 760,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/icon.ico"
    ]
  }
}
